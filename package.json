{
  "name": "inspace-desktop",
  "version": "1.0.0",
  "type": "module",
  "description": "A desktop application built with Electron, React, TypeScript, and SCSS",
  "main": "./dist/main/main.js",
  "homepage": "./",
  "scripts": {
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "build:preload": "tsc src/preload/preload.ts --outDir dist/preload --target ES2020 --module ES2020 --moduleResolution node",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "start:renderer": "vite",
    "start:main": "cross-env NODE_ENV=development electron .",
    "start": "concurrently \"npm run start:renderer\" \"wait-on http://localhost:3000 && npm run start:main\"",
    "dev": "npm run start",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "prepare": "husky install",
    "prestart": "npm run build:main && npm run build:preload",
    "prebuild": "npm run lint",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "scss",
    "desktop-app"
  ],
  "author": "InSpace Desktop Team",
  "license": "ISC",
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.5.2",
    "@types/react": "^18.3.16",
    "@types/react-dom": "^18.3.5",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitejs/plugin-react": "^5.0.4",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "electron": "^38.1.2",
    "eslint": "^9.36.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "sass": "^1.93.2",
    "typescript": "^5.7.3",
    "vite": "^7.1.7",
    "wait-on": "^9.0.1"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  }
}
